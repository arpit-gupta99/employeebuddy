<% if(success && success.length) {%>
<div class="position-fixed top-0 end-0 p-3" style="z-index: 5">
    <div class="toast bg-success" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Employee Buddy</strong>
            <small>Dismissing in 4 Sec</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body text-white"><%=success%></div>
    </div>
</div>
<% } %>

<% if(error && error.length) {%>
<div class="position-fixed top-0 end-0 p-3" style="z-index: 5">
    <div class="toast bg-danger" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Employee Buddy</strong>
            <small>Dismissing in 4 Sec</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body text-white"><%=error%></div>
    </div>
</div>
<% } %>